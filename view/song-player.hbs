<head>
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>

<section class="music-player-section">
    <h1 class="song-name" style="display: flex; justify-content: center;">{{song}}
        {{#if isFavourite}}
            <a class="unfavorite-button" href="/removeFromFavouriteSongs/{{song}}">&#10084;</a> 
        {{else}}
            <a class="favorite-button" href="/addToFavouriteSongs/{{song}}">&#10084;</a>
        {{/if}}
        <p class="follower-count">({{totalLikes}})</p>
    </h1>
    
    <p class="artist-name">{{{artist}}}</p>

    <img src="{{image}}" class="cover" alt="">

    {{#if audio}}
        <audio src="{{{audio}}}" id="audio-player"></audio>

        <div class="seek-bar">
            <input type="range" min="0" max="100" value="0" class="seek-bar" id="seek-bar">
            <div class="time">
                <p id="current-time">0:00</p>
                <p id="duration">0:00</p>
            </div>
        </div>

        <div class="controls">
            <span class="material-symbols-outlined md-48" id="seek-backward">fast_rewind</span>
            <span class="material-symbols-outlined md-48" id="play">play_arrow</span>
            <span class="material-symbols-outlined md-48" id="pause" style="display: none;">pause</span>
            <span class="material-symbols-outlined md-48" id="stop">stop</span>
            <span class="material-symbols-outlined md-48" id="seek-forward">fast_forward</span>
        </div>

        <script src="/scripts/audio-controls.js"></script>
    {{else}}
        <p class="artist-name">This song is not available yet.</p>
    {{/if}}
</section>